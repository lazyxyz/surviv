{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "./dist",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "strict": true,
    "paths": {
      "@common/*": ["../common/src/*"],
      "@api/*": ["../api/src/*"]
    }
  },
  "exclude": ["node_modules"],
  "include": [
    "src",
    "../common/src",
    "../api/src"
  ],
  "ts-node": {
    "swc": true
  }
}
